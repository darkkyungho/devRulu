<p id="notice"><%= notice %></p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <%= image_tag @post.image_url(:large) %>
</p>

<p>
  <strong>User:</strong>
  <%= image_tag @post.user.avatar_url(:normal) %>
  <%= link_to @post.user.email, @post.user %>
</p>

<p>
  <strong>Tags:</strong>
  <%= tag_list @post.tag_list %>

  <button class="likePost btn" data-post-id="<%= @post.id %>">
    like <span>[<%= @post %>]</span>
  </button>
</p>

<p>
  <strong>Comment: (<%= @comments.size %>)</strong>

  <% if user_signed_in? %>
    <%= render 'comments/form' %>
  <% end %>
  <ul>
  <%= render @comments %>
  </ul>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %> |
<%= link_to 'Comment', new_post_comment_path(@post) %>
